# * General
backend = "glx";
glx-no-stencil = true;
glx-copy-from-front = false;

vsync = false;

use-damage = true;

# * Shadows
shadow = true;
shadow-radius = 11;

shadow-exclude = [
    "window_type = 'dock'",
    "class_g = 'slop'",
];

# * Opacity
opacity-rule = [
    "79:class_g = 'kitty'",
    "85:class_g = 'rofi'",
    "90:class_g = 'code'",
];

# * Blurring
# blur background of transparent windows
blur-background = true;
blur-background-frame = true;
#blur-background-fixed = false;

blur-method = "kawase";
blur-strength = 20;

# * Fading
fading = true;
# decrease fade duration (ms)
fade-delta = 8;
fade-in-step = .05;
fade-out-step = .05;

# * Dimming
inactive-dim = 0;

fade-exclude = [
    "class_g = 'slop'",
];

# * Focus
# consider these windows always focused (so not dimmed)
focus-exclude = [
    "class_g = 'mpv'",
    "class_g = 'slop'",
    "class_g = 'brave'",
    "class_g = 'discord'",
];

# * Window Type Settings
#wintypes:
#{
    # e.g. Emacs tooltips
#    tooltip =
#    {
        # fade = true;
        # shadow = true;
        # focus = true;
#        opacity = 0.85;
#    };
#};
